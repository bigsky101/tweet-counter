doctype html
html
  head
    title Tweet Counter
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(href="/style.css" rel="stylesheet" type="text/css")
    link(href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet")
    link(rel="shortcut icon" href="https://cdn.glitch.com/c1e498e8-b00c-4434-9d0e-4043a384ed2f%2Ffavicon.ico?1504902692759")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    
  body
    div#container
      span#status App status: 
        span#percent-capacity
        |  capacity.
      div#input
        ul
          li
            label(for="user") user: 
            input#user(type="text")
          li
            label(for="startdate") start date: 
            input#startdate(type="date")
          li
            label(for="enddate") end date: 
            input#enddate(type="date")
        input#submit(type="button" value="Count Tweets")
        div#loading
          - for (var i = 0; i < 6; i++)
            div(class="blob blob-" + i)
      div#output
        ul
          li
            label user: 
            span#display-user
          li
            label Start Date: 
            span#display-startdate
          li
            label End Date: 
            span#display-enddate
          li
            label Total Days: 
            span#display-totaldays
          li
            label Tweets: 
            span#display-tweets
          li
            label Tweets/Day: 
            span#display-average
    p#disclaimer 
      span Includes retweets
      span | Cannnot count protected users' tweets
      span | Limited to 1500 requests per 15 minutes, 1 request is 200 or fewer tweets
      span | Limited to ~3200 tweets
      span | All dates Noon Eastern
      br
      span Contribute on 
        a(href="https://github.com/mark20044/tweet-counter" target="_blank") GitHub
    script(src="/functions.js" type="text/javascript")